{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"],
      "inputs": ["src/**", "tsconfig.json"]
    },
    "dev": {
      "dependsOn": ["^dev"],
      "outputs": ["dist/**"],
      "inputs": ["src/**", "tsconfig.json"],
      "cache": false
    },
    "check": {
      "dependsOn": ["^check"],
      "inputs": ["src/**", "tsconfig.json"]
    },
    "clean": {
      "cache": false
    },
    "lint": {
      "inputs": ["src/**", "*.ts"]
    },
    "test": {
      "dependsOn": ["^build"],
      "inputs": ["src/**", "test/**", "vitest.config.ts"]
    }
  }
}
